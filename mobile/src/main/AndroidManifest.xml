<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.casadalagoa.vof" >

    <!-- This permission is necessary in order to perform network access. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permissions required by the sync adapter -->
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_vof"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!--
        <activity
            android:name="vofconn.VORgService"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="br.com.casadalagoa.vof.VVorg_settings"
            android:label="@string/title_activity_vvorg_settings" >
        </activity>
        <!--
        <activity
            android:name="vofVORG_MainMobile"
            android:label="@string/title_activity_vorg__main_mobile" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        -->
        <activity
            android:name="br.com.casadalagoa.vof.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="br.com.casadalagoa.vof.data.BoatProvider"
            android:authorities="@string/content_authority"
            android:exported="false"
            android:syncable="true" />

        <!-- SyncAdapter's dummy authentication service -->
        <service
            android:name="br.com.casadalagoa.vof.sync.VORAuthenticatorService"
            android:icon="@drawable/ic_vof" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <!-- The SyncAdapter service -->
        <service
            android:name="br.com.casadalagoa.vof.sync.VORSyncService"
            android:exported="true"
            android:icon="@drawable/ic_vof"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>
            <!--
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
            -->
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>
        <!--
        <activity
            android:name="vofconn.WearCom"
            android:label="@string/title_activity_wear_com" >
        </activity>
        -->
        <activity
            android:name="br.com.casadalagoa.vof.about_activity"
            android:label="@string/title_activity_about_activity"
            android:parentActivityName="br.com.casadalagoa.vof.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.casadalagoa.vof.MainActivity" />
        </activity>
    </application>

</manifest>
