<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/lay_rel_inc"
    android:background="@drawable/bg_grei">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="false">

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="dtlc"
            android:id="@+id/mDtlc"
            android:gravity="center"
            android:textColor="@color/green"
            android:textIsSelectable="false"
            android:layout_centerInParent="true" />-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_boat"
            android:src="@drawable/alvi_e0001"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="false" />


        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="10"
            android:id="@+id/mWSpeed"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/wind"
            android:textStyle="bold"
            android:layout_above="@+id/center_txt"
            android:layout_toStartOf="@+id/center_txt" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="10"
            android:textSize="18sp"
            android:id="@+id/mBSpeed"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:background="@drawable/boat"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/center_txt"
            android:layout_above="@+id/center_txt" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="220"
            android:textSize="14sp"
            android:id="@+id/mTWA"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold"
            android:background="@drawable/compass"
            android:layout_toEndOf="@+id/mBSpeed"
            android:layout_below="@+id/mWindDegree" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="09:53"
            android:id="@+id/watch_time"
            android:gravity="center_horizontal|bottom"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="36dp"
            android:textIsSelectable="false"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100%"
            android:id="@+id/watch_battery"
            android:textColor="#FF0000"
            android:gravity="center"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/watch_time"
            android:layout_toRightOf="@+id/watch_time"
            android:textIsSelectable="false"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/watch_time"
            android:layout_alignBottom="@+id/watch_time" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="180"
            android:textSize="16sp"
            android:id="@+id/mWindDegree"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold"
            android:singleLine="true"
            android:background="@drawable/wingdegree"
            android:layout_toEndOf="@+id/img_boat"
            android:layout_alignTop="@+id/center_txt"
            android:layout_alignStart="@+id/watch_battery"
            android:gravity="center" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:id="@+id/center_txt"
            android:layout_centerInParent="true"
            android:singleLine="false" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="1"
            android:id="@+id/mRank"
            android:textColor="@android:color/white"
            android:background="@drawable/rank"
            android:textStyle="bold|italic"
            android:textSize="32sp"
            android:gravity="center"
            android:singleLine="false"
            android:layout_below="@+id/mWindDegree"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/watch_time"
            android:layout_alignBottom="@+id/mTWA"
            android:layout_alignEnd="@+id/mLocal"
            android:maxWidth="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="33.24.000ยบ\n26.33.444ยบ"
            android:id="@+id/mLocal"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="9sp"
            android:textIsSelectable="false"
            android:layout_below="@+id/center_txt"
            android:layout_toStartOf="@+id/watch_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="DTLC 5000\nDTC 30"
            android:id="@+id/textView"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="12sp"
            android:textIsSelectable="false"
            android:layout_above="@+id/mRank"
            android:layout_below="@+id/mWSpeed"
            android:layout_toStartOf="@+id/center_txt"
            android:layout_alignStart="@+id/mLocal" />
    </RelativeLayout>

</RelativeLayout>
