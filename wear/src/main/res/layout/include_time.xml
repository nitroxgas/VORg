<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/lay_rel_inc"
    android:background="@drawable/bg_grei">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="false">

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="dtlc"
            android:id="@+id/mDtlc"
            android:gravity="center"
            android:textColor="@color/green"
            android:textIsSelectable="false"
            android:layout_centerInParent="true" />-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_boat"
            android:src="@drawable/alvi_e0001"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="false"
            android:visibility="invisible" />


        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="10"
            android:id="@+id/mBSpeed"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/boat"
            android:textStyle="bold"
            android:layout_above="@+id/center_txt"
            android:layout_toStartOf="@+id/center_txt" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="10"
            android:textSize="18sp"
            android:id="@+id/mWSpeed"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:background="@drawable/wind"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/center_txt"
            android:layout_above="@+id/center_txt" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="220"
            android:textSize="14sp"
            android:id="@+id/mTWA"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold"
            android:background="@drawable/compass"
            android:layout_toEndOf="@+id/mWSpeed"
            android:layout_below="@+id/mWindDegree"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="09:53"
            android:id="@+id/watch_time"
            android:gravity="center_horizontal|bottom"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="36dp"
            android:textIsSelectable="false"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100%"
            android:id="@+id/watch_battery"
            android:textColor="#FF0000"
            android:gravity="center"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/watch_time"
            android:layout_toRightOf="@+id/watch_time"
            android:textIsSelectable="false"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/watch_time"
            android:layout_alignBottom="@+id/watch_time" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="180"
            android:textSize="16sp"
            android:id="@+id/mWindDegree"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold"
            android:singleLine="true"
            android:background="@drawable/wingdegree"
            android:layout_toEndOf="@+id/img_boat"
            android:layout_alignTop="@+id/center_txt"
            android:layout_alignStart="@+id/watch_battery"
            android:gravity="center"
            android:layout_marginLeft="4dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:id="@+id/center_txt"
            android:layout_centerInParent="true"
            android:singleLine="false"
            android:text="Waiting\nManual\nor Auto\nSync"
            android:gravity="center"
            android:textColor="@color/light_grey"
            android:shadowColor="@color/black"
            android:background="@color/transparent"
            android:autoText="false" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="1"
            android:id="@+id/mRank"
            android:textColor="@android:color/white"
            android:background="@drawable/rank"
            android:textStyle="bold|italic"
            android:textSize="32sp"
            android:gravity="center"
            android:singleLine="true"
            android:layout_below="@+id/mWindDegree"
            android:layout_alignStart="@+id/img_boat"
            android:layout_marginLeft="-35dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="S 33ยบ24&apos;40&quot;\nE 33ยบ24&apos;40&quot;"
            android:id="@+id/mLocal"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="12sp"
            android:textIsSelectable="false"
            android:layout_toStartOf="@+id/watch_time"
            android:layout_alignTop="@+id/watch_time"
            android:layout_marginTop="-20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="DTLC 5000\nDTC 30"
            android:id="@+id/mDTLC"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="10sp"
            android:textIsSelectable="false"
            android:layout_above="@+id/mRank"
            android:layout_below="@+id/mBSpeed"
            android:layout_toStartOf="@+id/center_txt"
            android:layout_alignStart="@+id/mLocal"
            android:layout_marginLeft="-8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LC 99%"
            android:id="@+id/mLC"
            android:textColor="@color/green"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_alignBottom="@+id/center_txt"
            android:layout_alignStart="@+id/mWindDegree"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="-5sp"
            android:layout_alignParentStart="false" />
    </RelativeLayout>

</RelativeLayout>
